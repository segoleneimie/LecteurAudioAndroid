<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cours.lecteuraudio">

<!--continuer la lecture de la musique quand le téléphone se met en veille -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
<!--    <uses-permission android:name="android.permission.READ_CONTACTS" />-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LecteurAudio">
        <activity android:name=".MainActivity">

<!--            android:screenOrientation="portrait">-->
<!--Nous garderons l'orientation de l'appareil en mode portrait pour plus de simplicité.
 Le launchMode aidera à la navigation,
 il permettra de revenir directement à l'application
 si l'utilisateur l'a quitté et ne lancera pas une nouvelle instance.-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>